// .vscode/tasks.json
// DocumentaÃ§Ã£o: https://go.microsoft.com/fwlink/?LinkId=733558
{
  "version": "2.0.0",
  "tasks": [
    // ðŸŽ¯ Task principal que agrupa os watchers de TSC e esbuild
    {
      "label": "watch",
      "dependsOn": [
        "npm: watch:tsc",
        "npm: watch:esbuild"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": []
    },

    // ðŸ‘€ Watch do TypeScript
    {
      "type": "npm",
      "script": "watch:tsc",
      "label": "npm: watch:tsc",
      "isBackground": true,
      "problemMatcher": "$tsc-watch",
      "group": "build",
      "presentation": {
        "group": "watchers",
        "reveal": "never"
      }
    },

    // ðŸ‘€ Watch do esbuild
    {
      "type": "npm",
      "script": "watch:esbuild",
      "label": "npm: watch:esbuild",
      "isBackground": true,
      "problemMatcher": "$esbuild-watch",
      "group": "build",
      "presentation": {
        "group": "watchers",
        "reveal": "never"
      }
    },

    // ðŸ§ª Watch de testes (opcional)
    {
      "type": "npm",
      "script": "watch-tests",
      "label": "npm: watch-tests",
      "isBackground": true,
      "problemMatcher": "$tsc-watch",
      "group": "test",
      "presentation": {
        "reveal": "never",
        "group": "watchers"
      }
    },

    // ðŸ”„ Task combinada para watch geral + testes (manual)
    {
      "label": "tasks: watch-with-tests",
      "dependsOn": [
        "npm: watch",
        "npm: watch-tests"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "silent"
      }
    }
  ]
}
